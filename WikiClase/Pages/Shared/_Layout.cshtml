<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WikiClase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WikiClase.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/estilo.css"/>
</head>
<body class="font-monospace">
    <section>
        <header>

            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 bg-dark">
                <div class="container">
                    <a class="navbar-brand text-light fs-3" asp-area="" asp-page="/Index">WikiClase</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 d-flex justify-content-around">
                            <li1 class="nav-item">
                                <a class="nav-link text-white fs-3" asp-area="" asp-page="/Index">Inicio</a>
                            </li1>               
                            <li2 class="nav-item">
                                <a class="nav-link text-white fs-3" asp-area="" asp-page="/Privacy">Privacidad</a>
                            </li2>
                            <li3 class="nav-item">
                                <a class="nav-link text-white fs-3" asp-area="" asp-page="/Categorias/Index">Categorias</a>
                            </li3>
                            <li4 class="nav-item">
                                <a class="nav-link text-white fs-3" asp-area="" asp-page="/Posts/Index">Post</a>
                            </li4>
                            <li5 class="nav-item">
                                <a class="nav-link text-white fs-3" asp-area="" asp-page="/Tags/Index">Tag</a>
                            </li5>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted bg-dark">
            <div class="container text-white">
                Todos los derechos reservados; 2022 - WikiClase - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </section>
</body>
</html>